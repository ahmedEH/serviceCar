@model IEnumerable<serviceCar.Models.DbModels.VehicleBreakdown>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Problem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdVehicleBdNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Problem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdVehicleBdNavigation.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdBreakdown">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdBreakdown">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdBreakdown">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
