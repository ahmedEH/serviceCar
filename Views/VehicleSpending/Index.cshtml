@model IEnumerable<serviceCar.Models.DbModels.VehicleSpending>

@{
    Layout = "_UsersLayout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DateSp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeSp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdConductorSpNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdVehicleSpNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateSp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeSp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdConductorSpNavigation.Adress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdVehicleSpNavigation.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdSp">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdSp">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdSp">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
